{
  "extends": [
    "config:base"
  ],
  "ignoreDeps": [
    "@pnpm/config",
    "@pnpm/default-fetcher",
    "@pnpm/default-resolver",
    "@pnpm/git-fetcher",
    "@pnpm/git-resolver",
    "@pnpm/headless",
    "@pnpm/local-resolver",
    "@pnpm/logger",
    "@pnpm/npm-resolver",
    "@pnpm/outdated",
    "@pnpm/package-requester",
    "@pnpm/server",
    "@pnpm/tarball-fetcher",
    "@pnpm/tarball-resolver",
    "@pnpm/types",
    "@pnpm/utils",
    "package-store",
    "pnpm-default-reporter",
    "pnpm-file-reporter",
    "pnpm-install-checks",
    "pnpm-list",
    "pnpm-registry-mock",
    "pnpm-shrinkwrap",
    "remove-all-except-outer-links",
    "supi",
    "ts-node"
  ],
  "ignorePaths": [
    "test/",
    "packages/list/test/",
    "packages/list/example/"
  ],
  "packageRules": [
    {
      "packageNames": ["@types/ramda"],
      "allowedVersions": "0.25.34"
    },
    {
      "packageNames": ["got"],
      "allowedVersions": "<=8"
    }
  ],
  "pinVersions": false,
  "schedule": [
    "on Friday",
    "every weekend"
  ]
}
